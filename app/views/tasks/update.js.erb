<% if @task.errors.present? %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= @tasks.errors.full_messages.join('.') %>"
  });
<% else %>
  $('.modal').modal('close');
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.tasks.updated_msg') %>"}).then(function(){
      window.location = '<%= tasks_path %>'
  });
<% end %>
