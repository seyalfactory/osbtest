<% if @task.errors.present? %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= @task.errors.full_messages.join('.') %>"
  });
<% elsif @task_exists.eql?(true) %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.tasks.duplicate_name') %>"
  });
<% else %>
  $('.modal').modal('close');
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.tasks.created_msg') %>"}).then(function(){
      window.location = '<%= tasks_path %>'
  });
<% end %>
