$('select').material_select();
$('.qtip').remove();
$('#task_body').html('<%= escape_javascript render('logs/logs') %>');
$('#calendar').fullCalendar( 'refetchEvents' );
$('#new_log')[0].reset();
$('#log_date').val($.datepicker.formatDate('yy-mm-dd', new Date()) );
var select = $('select');
select.prop('selectedIndex', 0); //Sets the first option as selected
select.material_select();        //Update material select

<% if @log.errors.present? %>
swal({
    icon: "error",
    title: 'Oops..!',
    buttons: false,
    timer: 3000,
    text: "<%= @log.errors.full_messages.join('.') %>"
});
<% else %>
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.logs.created_msg') %>"});
<% end %>
