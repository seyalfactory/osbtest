<% if @staff.errors.present? %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= @staff.errors.full_messages.join('.') %>"
  });
<% elsif @staff_exists.eql?(true) %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.staffs.duplicate_name') %>"
  });
<% else %>
  $('.modal').modal('close');
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.staffs.created_msg') %>"}).then(function(){
      window.location = '<%= @project.present? ? project_path(@project) : staffs_path %>'
  });
<% end %>
